{
  "name": "npm-run",
  "displayName": "NPM Run",
  "description": "Run package.json scripts with single click",
  "version": "0.0.1",
  "publisher": "nikhil-patil",
  "license": "MIT",
  "author": {
    "name": "Nikhil Patil",
    "url": "https://github.com/nik-base"
  },
  "repository": {
    "url": "https://github.com/nik-base/npm-run",
    "type": "git"
  },
  "homepage": "https://github.com/nik-base/npm-run#readme",
  "bugs": {
    "url": "https://github.com/nik-base/npm-run/issues",
    "email": "nikhil.patil.3632@gmail.com"
  },
  "readmeFilename": "README.md",
  "pricing": "Free",
  "icon": "resources/icons/play-solid.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.89.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "npm",
    "run",
    "run task",
    "npm run",
    "pnpm run",
    "yarn run",
    "npm start",
    "script",
    "task",
    "run script",
    "npm-run"
  ],
  "activationEvents": [
    "onLanguage:json",
    "workspaceContains:package.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "NPM Run",
      "properties": {
        "npm-run.enable": {
          "type": "boolean",
          "description": "Enable Run script as task from package.json",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test-e2e": "wdio run ./test/e2e/wdio.conf.ts"
  },
  "devDependencies": {
    "@serenity-js/assertions": "^3.31.9",
    "@serenity-js/console-reporter": "^3.31.9",
    "@serenity-js/core": "^3.31.9",
    "@serenity-js/mocha": "^3.31.9",
    "@serenity-js/serenity-bdd": "^3.31.9",
    "@serenity-js/web": "^3.31.9",
    "@serenity-js/webdriverio": "^3.31.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.8",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@wdio/cli": "^9.10.1",
    "@wdio/dot-reporter": "^9.10.1",
    "@wdio/local-runner": "^9.10.1",
    "@wdio/spec-reporter": "^9.10.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "prettier": "^3.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "wdio-vscode-service": "^6.1.3",
    "wdio-wait-for": "^3.1.0"
  }
}
